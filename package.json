{
  "name": "testing",
  "version": "1.0.0",
  "description": "Project to learn about TDDD, unit testing and libraries such as Jest, Mocha, Chai, Jazmine, Supertest.",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --inspect ./src/app.js",
    "test": "jest --verbose",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },

  "keywords": [
    "testing",
    "jest",
    "node",
    "javascript",
    "backend"
  ],
  "author": "beto",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "jest": true
    }
  },
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.2.4",
    "validate-branch-name": "^1.3.0"
  },
  "dependencies": {
    "express": "^4.18.1",
    "mongodb": "^4.10.0",
    "mongoose": "^6.6.3"
  }
}
